---
import { site, getSiteCopy } from "../data/site";
import { getLangFromPath, dict } from "../i18n";

const year = new Date().getFullYear();

const url = new URL(Astro.request.url);
const lang = getLangFromPath(url.pathname);
const t = dict[lang];

// bilingual site copy
const copy = getSiteCopy(lang);
---

<footer class="border-t border-white/10 bg-[#0b0b10]">
  <div class="mx-auto max-w-6xl px-6 py-10 grid gap-6 md:grid-cols-2">
    
    <!-- Identity -->
    <div class="text-sm text-white/70">
      <div class="font-semibold text-white">{site.name}</div>
      <div class="mt-1">{site.addressFull}</div>
      <div class="mt-1">{copy.hoursText}</div>

      <div class="mt-4 text-xs text-white/40">
        Â© {year} {site.name}
      </div>
    </div>

    <!-- Links -->
    <div class="flex flex-wrap items-start gap-3 md:justify-end">
      <a
        href={site.mapsShareUrl}
        target="_blank"
        class="rounded-full border border-white/15 px-4 py-2 text-sm text-white/80 hover:text-white hover:bg-white/10 transition"
      >
        {t.footer.directions}
      </a>

      <a
        href={site.socials.instagram}
        target="_blank"
        class="rounded-full border border-white/15 px-4 py-2 text-sm text-white/80 hover:text-white hover:bg-white/10 transition"
      >
        {t.footer.instagram}
      </a>

      <a
        href={site.socials.facebook}
        target="_blank"
        class="rounded-full border border-white/15 px-4 py-2 text-sm text-white/80 hover:text-white hover:bg-white/10 transition"
      >
        {t.footer.facebook}
      </a>

      <a
        href={site.socials.tripadvisor}
        target="_blank"
        class="rounded-full border border-white/15 px-4 py-2 text-sm text-white/80 hover:text-white hover:bg-white/10 transition"
      >
        {t.footer.tripadvisor}
      </a>
    </div>
  </div>
</footer>