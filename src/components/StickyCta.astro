<div class="fixed inset-x-0 bottom-0 z-50 border-t border-white/10 bg-black/80 backdrop-blur md:hidden">
  <div class="mx-auto flex max-w-3xl gap-2 p-3">
    
    <a
      class="flex-1 rounded-xl bg-white/10 px-4 py-3 text-center text-sm font-semibold text-white hover:bg-white/15"
      href={mapsUrl}
      target="_blank"
      rel="noopener"
    >
     ğŸ“ Directions
    </a>

    {isOpenNow ? (
      <a
        class="flex-1 rounded-xl bg-white px-4 py-3 text-center text-sm font-semibold text-black hover:bg-white/90"
        href={`tel:${phoneE164}`}
      >
       ğŸ“ Call
      </a>
    ) : (
      <a
        class="flex-1 rounded-xl bg-white px-4 py-3 text-center text-sm font-semibold text-black hover:bg-white/90"
