---
const nav = [
  { href: "/", label: "Home" },
  { href: "/menu", label: "Menu" },
  { href: "/careers", label: "Careers" },
  { href: "/#visit", label: "Visit" },
];
---

<header class="sticky top-0 z-50 border-b border-white/10 bg-[#0b0b10]/80 backdrop-blur">
  <div class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4">
    <a href="/" class="flex items-center gap-3">
      <img src="logo/1-logo.png" alt="Sally's Bar logo" class="h-8 w-8 rounded-md" />
      <span class="font-semibold tracking-wide">Sallyâ€™s Bar</span>
    </a>

    <nav class="hidden items-center gap-6 text-sm text-white/80 md:flex">
      {nav.map((item) => (
        <a class="hover:text-white" href={item.href}>{item.label}</a>
      ))}

      <a
        href="/menu"
        class="rounded-full bg-white px-4 py-2 font-semibold text-black hover:bg-white/90"
      >
        View Menu
      </a>
    </nav>

    <!-- Mobile quick action -->
    <a
      class="md:hidden rounded-full border border-white/15 px-3 py-2 text-sm text-white/80 hover:bg-white/10"
      href="/menu"
    >
      Menu
    </a>
  </div>
</header>
