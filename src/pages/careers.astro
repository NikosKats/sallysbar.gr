---
import "../styles/global.css";
import Header from "../components/Header.astro";
import { site } from "../data/site";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Careers • Sally’s Bar</title>
  </head>

  <body class="min-h-screen bg-[#0b0b10] text-white font-body">
    <Header />
    <main class="mx-auto max-w-6xl px-6 py-16">
      <h1 class="text-4xl font-semibold">Careers</h1>
      <p class="mt-4 text-white/70">
        Seasonal roles for summer. Send a message on Instagram or call us.
      </p>

      <div class="mt-8 flex flex-wrap gap-3">
        <a
          class="rounded-2xl bg-white px-6 py-3 font-semibold text-black hover:bg-white/90"
          href={site.socials.instagram}
          target="_blank"
        >
          Message on Instagram
        </a>

        <a
          class="rounded-2xl border border-white/20 px-6 py-3 font-semibold hover:bg-white/10"
          href={`tel:${site.phoneE164}`}
        >
          Call
        </a>
      </div>
    </main>
  </body>
</html>
